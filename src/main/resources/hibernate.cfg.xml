<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/movie_db?serverTimezone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="mate.academy.hibernate.relations.model.Movie"></mapping>
        <mapping class="mate.academy.hibernate.relations.model.Actor"></mapping>
        <mapping class="mate.academy.hibernate.relations.model.Country"></mapping>
    </session-factory>
</hibernate-configuration>